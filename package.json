{
    "name": "nutshell",
    "author": "Mike Koser <mikekoser@gmail.com> (https://github.com/HeyKos/)",
    "version": "0.1.0",
    "description": "A application that unifies various user accounts to visualize a person's life -- in a nutshell.",
    "license": "SEE LICENSE IN LICENSE",
    "repository": "github:HeyKos/nutshell.me",
    "homepage": "https://github.com/HeyKos/nutshell.me",
    "scripts": {
        "dev": "vite",
        "build": "tsc --pretty && npm run lint && vite build",
        "coverage": "jest --coverage",
        "coverage-report": "jest --coverage && codecov --disable=gcov",
        "lint": "npx eslint . --ext .js,.jsx,.ts,.tsx",
        "serve": "vite preview",
        "test": "jest",
        "deploy": "npm run build && firebase deploy"
    },
    "dependencies": {
        "@material-ui/core": "^4.12.3",
        "@material-ui/icons": "^4.11.2",
        "firebase": "^9.1.3",
        "fontsource-roboto": "^4.0.0",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "react-router-dom": "^5.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.15.8",
        "@babel/preset-env": "^7.15.8",
        "@babel/preset-typescript": "^7.15.0",
        "@types/jest": "^26.0.22",
        "@types/react": "^17.0.30",
        "@types/react-dom": "^17.0.9",
        "@types/react-router-dom": "^5.3.1",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "@vitejs/plugin-react-refresh": "^1.3.6",
        "babel-loader": "^8.2.2",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.1.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-react": "^7.26.1",
        "gh-pages": "^3.1.0",
        "jest": "^26.6.3",
        "prettier": "2.2.1",
        "ts-node": "^10.3.0",
        "typescript": "^4.4.4",
        "vite": "^2.6.7",
        "vite-tsconfig-paths": "^3.3.17"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ],
            "@babel/preset-typescript"
        ]
    }
}
